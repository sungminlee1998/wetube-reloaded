extend ../base

block content 
    if errorMessage 
        span=errorMessage 
    form(method="post")
        input(placeholder="Old Password", name="oldPassword", required, type="password")
        input(placeholder="New Password", name="newPassword",required, type="password")
        input(placeholder="New Password Confirmation", name="newPasswordConfirmation", required, type="password")
        input(value="Change Password", type="submit")

